<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewContact"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        >

        <Button
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"></Button>

        <Button
            android:id="@+id/save_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/ic_baseline_save_24"></Button>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/view_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/card_name"
        android:src="@drawable/ic_baseline_person_24"></ImageView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/capure_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/view_image"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_baseline_photo_camera_24"
        app:maxImageSize="40dp"></com.google.android.material.floatingactionbutton.FloatingActionButton>

    <ImageView
        android:id="@+id/cell_name"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/capure_image"
        android:layout_gravity="left"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_baseline_person_24"></ImageView>

    <EditText
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/capure_image"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/cell_name"></EditText>
    <ImageView
        android:id="@+id/cell_phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/cell_name"
        android:layout_gravity="left"
        android:layout_margin="5dp"
        android:src="@drawable/ic_baseline_call_24"></ImageView>

    <EditText
        android:id="@+id/text_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_name"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/cell_phone"></EditText>

    <ImageView
        android:id="@+id/cell_email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/cell_phone"
        android:layout_gravity="left"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_baseline_email_24"></ImageView>

    <EditText
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_phone"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/cell_email"></EditText>

</RelativeLayout>